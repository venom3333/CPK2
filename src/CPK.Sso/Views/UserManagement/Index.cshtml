@model IEnumerable<CPK.Sso.Models.ManageViewModels.UserViewModel>

@{
    ViewData["Title"] = "Пользователи";
}
<div class="welcome-page container">
    <div class="row page-header">
        <div class="col-sm-10">
            <h1>Пользователи</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Roles)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailConfirmed)
                    </th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.UserName
                        </td>
                        <td>
                            @string.Join(", ", user.Roles)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.EmailConfirmed)
                        </td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.UserId">Редактировать</a> |
                            <a asp-action="DeleteUser" asp-route-id="@user.UserId">Удалить</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>